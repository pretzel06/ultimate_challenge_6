<div class="ui three item menu">
  <%= link_to semantic_icon('home') + 'Home', root_path, class: 'item'%>
  <%= link_to 'Alphabetized', customers_alphabetized_path, class: 'item'%>
  <%= link_to 'Missing Emails', customers_missing_email_path, class: 'item'%>
</div>
<div class="container">
  <div class="ui piled segment">
<div class="ui centered link three cards">
  <% @customers.each do |customers|  %>
<div class="card">
  <div class="image">
    <% if customers.Image.present? %>
     <%= image_tag customers.Image%>
    <% else %>

    <% end %>
  </div>
  <div class="content">
    <div class="header"><%=customers.Full_name%></div>
    <div class="meta">
      <!-- it should be phone number typos acknowledged Lol -->
      <a>
        <% if customers.Phone_name != '' %>
          <%=customers.Phone_name%>
        <% else %>
          Unknown number  ╯°□°）╯︵ ┻━┻
        <% end %>
      </a>
    </div>
    <div class="description">
      <% if customers.Notes != '' %>
        <%=customers.Notes%>
      <% else %>
        There is no notes.
      <% end %>
    </div>
  </div>
  <div class="extra content">
    <span>
      <% if customers.Email_address != '' %>
        <%=customers.Email_address%>
      <% else %>
       Missing Email!
      <% end %>
    </span>
  </div>
</div>
  <% end %>
</div>
  </div>
  <div class="ui container">
    <div class="ui right floated horizontal list">
      <div class="disabled item" href="#">© 2018 CRM Challenge</div>
      <div class="disabled item" href="#">Dragon Ball Super Reference</div>
    </div>
    <div class="ui horizontal list">
      <%= link_to 'Home', root_path, class: 'item'%>
      <%= link_to 'Alphabetized', customers_alphabetized_path, class: 'item'%>
      <%= link_to 'Missing Emails', customers_missing_email_path, class: 'item'%>
    </div>
  </div>
</div>